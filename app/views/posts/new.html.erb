<% provide :title, "Create post" %>
<div class="head">
  <h1>Create your posts</h1>
</div>
<div class="body">
  <%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.submit :create %>
  <% end %>
</div>


<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <div class="container-post">
        <%= form_for @post do |f| %>
          <div class="form-group"><%= f.text_field :title, class: "form-control" %></div>
          <div class="form-group"><%= f.text_field :sub_title, class: "form-control" %></div>
          <div class="form-group"><%= f.text_area :content, class: "form-control ckeditor" %></div>
          <div class="form-group"><%= f.submit :create, class: "form-control" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
