<header class="intro-header" style="background-image: url('<%= image %>')">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="post-heading">
          <h1><%= post.title %></h1>
          <h2 class="subheading"><%= post.sub_title %></h2>
          <span class="meta">Posted by
            <%= link_to post.user.name, post.user %> on <%= l post.created_at, format: :long_day %></span>
        </div>
      </div>
    </div>
  </div>
</header>
