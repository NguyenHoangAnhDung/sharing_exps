<h1>Edit this Portfolio Item</h1>

<%= form_for(@portfolio_item) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <ul>
    <%= f.fields_for :technologies do |ff| %>
      <li>
        <%= ff.label :name %>
        <%= ff.text_field :name %>    
      </li>
    <% end %>
  </ul>

  <div>
    <%= f.submit %>
  </div>
<% end %>